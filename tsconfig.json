{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.ts", "*.tsx", "*.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  }
}
